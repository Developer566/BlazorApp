    <script>
        document.addEventListener('DOMContentLoaded', function () {
            if (window.bootstrap && window.bootstrap.Collapse) {
                document.querySelectorAll('[data-bs-toggle="collapse"]').forEach(function (el) {
                    el.addEventListener('click', function (e) {
                        var selector = el.getAttribute('href') || el.getAttribute('data-bs-target');
                        if (!selector) return;
                        try {
                            var target = document.querySelector(selector);
                            if (!target) return;
                            var instance = window.bootstrap.Collapse.getOrCreateInstance(target);
                            instance.toggle();
                            e.preventDefault();
                        } catch (err) {
                            console && console.error && console.error('Collapse init error', err);
                        }
                    });
                });
            }
        });
    </script>
    <script>
    window.downloadFile = (fileName, contentType, data) => {
        const blob = new Blob([new Uint8Array(data)], { type: contentType });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = fileName;
        a.click();
        URL.revokeObjectURL(url);
    };
</script>
